{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {% if errors|length > 0 %}
        <div class="offset-lg-2 col-lg-8" style="padding-top: 20px;">
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                {% for error in errors %}
                    <h6 >{{ error }}</h6>
                {% endfor %}
            </div>

        </div>
        <div class="col-lg-4">

        </div>
    {% endif %}


<div class="form-group">
    <div class="offset-lg-2 col-lg-8">
        <label>Nom<span style="color: #ed1a3b">*</span></label>
    </div>
    <div class="offset-lg-2 col-lg-8">
        {{ form_widget(form.nom ,{'attr': {'class': 'form-control'}}) }}
    </div>
</div>
<div class="form-group">
    <div class="offset-lg-2 col-lg-8">
        <label>Prénom<span style="color: #ed1a3b">*</span></label>
    </div>
    <div class="offset-lg-2 col-lg-8">
        {{ form_widget(form.prenom ,{'attr': {'class': 'form-control'}}) }}
    </div>
</div>
<div class="form-group">
    <div class="offset-lg-2 col-lg-8">
        <label>Email<span style="color: #ed1a3b">*</span></label>
    </div>
    <div class="offset-lg-2 col-lg-8">
        {{ form_widget(form.email ,{'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.email, {'attr': {'class': 'alert alert-danger alert-dismissible'}}) }}

    </div>
</div>
<div class="form-group">
    <div class="offset-lg-2 col-lg-8">
        <label>Mot de passe<span style="color: #ed1a3b">*</span></label>
    </div>
    <div class="offset-lg-2 col-lg-8">
        {{ form_widget(form.plainPassword.first ,{'attr': {'class': 'form-control','style':'margin-bottom: 0;'}}) }}
        <i class="fa fa-info-circle" aria-hidden="true" style="color: #F01235;display: inline"></i>
        <p style="display: inline;font-size: 12px;">Votre mot de passe doit comporter minimum 8
            caractères et contenir une majuscule et un chiffre</p>
        {{ form_errors(form.plainPassword.first, {'attr': {'class': 'alert alert-danger alert-dismissible'}}) }}

    </div>
</div>
<div class="form-group">
    <div class="offset-lg-2 col-lg-8">
        <label>Confirmer mot de passe<span style="color: #ed1a3b">*</span></label>
    </div>
    <div class="offset-lg-2 col-lg-8">
        {{ form_widget(form.plainPassword.second ,{'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.plainPassword.second, {'attr': {'class': 'alert alert-danger alert-dismissible'}}) }}

    </div>
</div>
<div class="form-group">
    <div class="offset-lg-2 col-lg-8">
        <label>Téléphone<span style="color: #ed1a3b">*</span></label>
    </div>
    <div class="offset-lg-2 col-lg-8">
        {{ form_widget(form.telephone ,{'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.telephone, {'attr': {'class': 'alert alert-danger alert-dismissible'}}) }}

    </div>
</div>
<div class="form-group">
    <div class="offset-lg-2 col-lg-8">
        <label>Adresse<span style="color: #ed1a3b">*</span></label>
    </div>
    <div class="offset-lg-2 col-lg-8">
        {{ form_widget(form.adresse ,{'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.adresse, {'attr': {'class': 'alert alert-danger alert-dismissible'}}) }}

    </div>
</div>

<div class="offset-lg-4 col-lg-4 text-right" style="padding-top: 20px;">

    <button style="margin-top: 3px;"  class="btn btn-block btn-outline-info ">
        Valider
    </button>

</div>
{{ form_end(form) }}

