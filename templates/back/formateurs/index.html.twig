{% extends 'back/block/layout.html.twig' %}


{% block page %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-lg-6">
                        <h1>Gestion Formateurs</h1>
                    </div>
                    <div class="offset-lg-4 col-lg-2 text-right">
                        <a href="{{ path('formateurs_new') }}" class="btn btn-block btn-outline-info btn-sm">
                            <i class="nav-icon fas fa-plus"></i> Ajouter
                        </a>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-12">

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Filtre</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <form class="row" id="myform" action="{{ path('formateurs_index') }}" method="get">
                                <div class="col-lg-6">
                                    <input class="form-control" type="text" placeholder="rechercher"  name="search" value="{{ search }}">
                                </div>
                                <div class="offset-lg-5 col-lg-1">
                                    <button type="button" id="search"  class="btn btn-block btn-outline-success " style="display: inline">
                                        <i class="nav-icon fas fa-search btn-outline-success"></i>
                                    </button>
                                </div>
                            </form>

                        </div>
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                <tr class="text-center">
                                    <th>Nom & Prénom</th>
                                    <th>Email</th>
                                    <th>Tél</th>
                                    <th>Adresse</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for user in users %}
                                    <tr class="text-center">
                                        <td>{{ user.nom }} {{ user.prenom }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.telephone }}</td>
                                        <td>{{ user.adresse }}</td>
                                        <td>
                                            <a class="btn btn-block btn-outline-info "
                                               style="display: inline;margin-right: 7px;"
                                               href="{{ path('formateurs_edit',{'id': user.id }) }}">
                                                <i class="nav-icon fas fa-edit btn-outline-info"></i>
                                            </a>
                                            <a class="btn btn-block btn-outline-danger " style="display: inline"
                                               href="{{ path('formateurs_delete',{'id': user.id }) }}">
                                                <i class="nav-icon fas fa-trash btn-outline-danger"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}


                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock %}
